<script type="text/javascript">
 $(document).ready(function() {
  $('#tipopessoa_select').on('change', function() {
    var selecionado = $(this).text();
    if(selecionado == 'Física'){
      document.getElementById('pessoa_pessoajuridica_id_field').style.display = 'none';
      document.getElementById('pessoa_pessoafisica_id_field').style.display = 'block';
    }
    if(selecionado == 'Jurídica'){
      document.getElementById('pessoa_pessoajuridica_id_field').style.display = 'block';
      document.getElementById('pessoa_pessoafisica_id_field').style.display = 'none';
    }
  });
});
</script>